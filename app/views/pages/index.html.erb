<h1>Blog App</h1>
<p>
    These are all the posts from the users.
</p>

<h3>
    Create a new Post: <%= link_to "New post", new_post_path %>
</h3>

<% @posts.each do |post| %>
    <h2>
        <%= post.title %> 
    </h2>
    <p>
        <%= post.description %>
    </p>
    <strong>
        <%= post.user.email %>
    </strong>
    <p>
        <%= link_to 'Edit', edit_post_path(post) %>
    </p>
<% end %> 